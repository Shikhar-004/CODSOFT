import random

moves = ["Rock", "Paper", "Scissors"]

while True:
    print("\n--- Let's Play! ---")
    print("Type Rock, Paper, or Scissors to make your move.")

    try:
        user_pick = input("Your choice: ").title()
        computer_pick = random.choice(moves)

        if user_pick not in moves:
            print("Invalid move! Please try again.")
            continue

        print(f"The computer picked: {computer_pick}")

        if user_pick == computer_pick:
            print("Result: It's a draw!")
        
        elif user_pick == "Rock":
            if computer_pick == "Scissors":
                print("Result: You win! Rock smashes scissors.")
            else:
                print("Result: You lose! Paper covers rock.")

        elif user_pick == "Paper":
            if computer_pick == "Rock":
                print("Result: You win! Paper covers rock.")
            else:
                print("Result: You lose! Scissors cuts paper.")

        elif user_pick == "Scissors":
            if computer_pick == "Paper":
                print("Result: You win! Scissors cuts paper.")
            else:
                print("Result: You lose! Rock smashes scissors.")

    except KeyboardInterrupt:
        print("\nGame ended. Thanks for playing!")
        break
